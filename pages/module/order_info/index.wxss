/* pages/module/order_info/index.wxss */
@import "../../assets/styles/pulic.wxss";
.order_info_list{
	margin-top:25rpx;
	padding:20rpx 30rpx;
	background-color:#fff;
	border-top:#d9d9d9 solid 1rpx;
	border-bottom:#d9d9d9 solid 1rpx;
}
.mg-b{
	margin-bottom:25rpx;
}
.hui-color{
	color:#737373;
}
.cheng-color{
	color:#e85115;
}
.order_info_adr{
	display:flex;
	position:relative;
}
.order_info_adrImg{
	width:30rpx;
	height:30rpx;
	margin-right:10rpx;
}
.order_info_adrImg image{
	width:30rpx;
	height:30rpx;
}
.order_info_icon{
	width:50rpx;
	height:50rpx;
	position:absolute;
	right:20rpx;
	top:50%;
	transform:translateY(-50%);
}
.order_info_icon image{
	width:50rpx;
	height:50rpx
}
.order_padding{
	padding:10rpx 0 ;
}
.order_shop_items{
	background:#fff;
}
.order_shop_items .order_shop_title{
	display:flex;
	justify-content:space-between;
	border-bottom:#d9d9d9 solid 1rpx;
}
.order_shop_items>view{
	padding:10rpx 30rpx;
}
.order_shop_items .order_shop_item{
	border-bottom:#d9d9d9 solid 1rpx;
	position:relative;
	display:flex;
}
.order_shop_items .order_shop_item .order_shop_item_img{
	width:140rpx;
	height:140rpx;
	margin-right:15rpx;
}
.order_shop_items .order_shop_item .order_shop_item_img image{
	width:140rpx;
	height:140rpx;
} 
.order_shop_items .order_shop_item .order_shop_item_nums{
	display:flex;
	justify-content:space-between;
	position:absolute;
	bottom:0;
	width:100%;
} 
.order_shop_items .order_shop_item .order_shop_item_content{
	width:100%;
	position:relative;
} 
.order_shop_items .order_shop_item .order_shop_item_price{
	font-size:30rpx;
} 
.order_shop_items .order_shop_price{
	text-align:right;
	padding:20rpx;
} 
.order_info_liu{
	margin-top:25rpx; 
	background-color:#fff;
}
.order_info_liu view{
	padding:10rpx 20rpx;
	border-bottom:#d9d9d9 solid 1rpx;
}
.order_info_liu view.order_info_textar{
	padding-bottom:30rpx;
}
.space-between{
	display:flex;
	justify-content:space-between;
}
.order_info_btns{
	padding:20rpx;
	margin-top:15rpx;
}
.order_info_btns button{
	padding:5rpx;
	margin-bottom:30rpx;
}
.cheng_btn{
	background:#ff7104;
	color:#fff;
}