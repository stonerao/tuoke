/* pages/module/shopping_address/index.wxss */
@import "../../assets/styles/pulic.wxss";
.adr{

}
.adr_title{
	height: 64rpx;
    line-height: 64rpx;
    padding-left: 20rpx;
    color: rgb(51, 51, 51);
    position: relative;
	display:flex;
	justify-content: space-between;
}
.adr_title image{
	height: 24rpx;
	width: 24rpx;
    line-height: 64rpx; 
    margin-right:50rpx;
}
.add_adr{
	background:#fff;
	display:flex;
	justify-content: space-between;
	    height: 112rpx;
    line-height: 112rpx;
    color: rgb(51, 51, 51);
    padding: 0 20rpx;
    border-bottom: rgb(222, 222, 222) solid 1px; 
    position: relative;
    margin-bottom:20rpx;
}
.add_adr .add_adr_icon{
	display: block;
    width: 46rpx;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
    border: rgb(102, 102, 102) solid 1px;
    border-radius: 50%;
    color: rgb(102, 102, 102);
    font-size: 36rpx;
    position: absolute;
    top: 32rpx;
    right: 40rpx;
}

.adr_main{
	background:#fff;
}
.adr_items{

}
.adr_item{
	padding:0 30rpx 30rpx 30rpx;
	border-bottom:3rpx  dashed #f0f0f0 ;
}
.adr_item .adr_item_title{
	line-height:70rpx;
	height:70rpx;
	color:#666;
	font-size:26rpx;
	border-bottom:#c7c7c7 solid 1rpx;
	display: flex;
	justify-content:space-between;
}
.mor_icon{
	margin-top:15rpx;
	float:left;
	margin-right:15rpx;
}
.adr_icons{
	margin-top:3zrpx;
	float:left;
	margin-right:15rpx;
}
.adr_item .adr_item_icon image{
	margin-right:30rpx;
	margin-top:15rpx;
}
.adr_item .adr_item_info{
	line-height:50rpx;
	height:50rpx;
	color:#000;
	font-size:28rpx; 
	margin-top:20rpx;
}
.adr_item .adr_item_info text{
	margin-right:50rpx;
}
.adr_item .adr_item_city{
	line-height:50rpx;
	font-size:24rpx;
	color:#8c8c8c;
	margin-left:55rpx;
}
.city_icon{
	width:40rpx;
	height:40rpx;
}
.not_text_icon{
	width:170rpx;
	height:167rpx;
}
.not_text{
	padding-top:80rpx;
	text-align: center;
	line-height:50rpx;
}